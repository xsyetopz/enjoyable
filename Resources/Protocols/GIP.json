{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GIP Protocol Device Configuration",
  "description": "Schema for Xbox/GIP protocol gamepad configurations",
  "type": "object",
  "required": [
    "device",
    "protocol",
    "mappings",
    "initialization",
    "shutdownSteps",
    "reportDescriptor"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "device": {
      "type": "object",
      "required": [
        "vendorId",
        "productId",
        "name"
      ],
      "properties": {
        "vendorId": {
          "type": "integer"
        },
        "productId": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "revision": {
          "type": [
            "string",
            "null"
          ]
        },
        "serialNumber": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "protocol": {
      "const": "gip"
    },
    "mappings": {
      "type": "object"
    },
    "initialization": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "description",
          "type",
          "data"
        ],
        "properties": {
          "description": {
            "type": "string"
          },
          "type": {
            "enum": [
              "gip",
              "control",
              "interrupt",
              "bulk"
            ]
          },
          "data": {
            "type": "string",
            "pattern": "^[0-9A-Fa-f]+$"
          }
        }
      }
    },
    "shutdownSteps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "description",
          "type",
          "data"
        ],
        "properties": {
          "description": {
            "type": "string"
          },
          "type": {
            "enum": [
              "gip",
              "control",
              "interrupt",
              "bulk"
            ]
          },
          "data": {
            "type": "string",
            "pattern": "^[0-9A-Fa-f]+$"
          }
        }
      }
    },
    "reportDescriptor": {
      "type": "object",
      "required": [
        "reportSize",
        "fields"
      ],
      "properties": {
        "reportSize": {
          "type": "integer",
          "minimum": 1
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "byte",
              "bitOffset",
              "bitLength",
              "type"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "byte": {
                "type": "integer",
                "minimum": 0
              },
              "bitOffset": {
                "type": "integer",
                "minimum": 0
              },
              "bitLength": {
                "type": "integer",
                "minimum": 1
              },
              "type": {
                "enum": [
                  "unsigned",
                  "signed",
                  "bitfield",
                  "boolean"
                ]
              }
            }
          }
        }
      }
    },
    "quirks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "enabled"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "parameters": {
            "type": "object"
          }
        }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Standard HID Device Configuration",
  "description": "Schema for standard HID gamepad configurations",
  "type": "object",
  "required": [
    "device",
    "protocol",
    "mappings",
    "initialization",
    "shutdownSteps",
    "reportDescriptor"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "device": {
      "type": "object",
      "required": [
        "vendorId",
        "productId",
        "name"
      ],
      "properties": {
        "vendorId": {
          "type": "integer"
        },
        "productId": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "protocol": {
      "const": "hid"
    },
    "mappings": {
      "type": "object"
    },
    "initialization": {
      "type": "array"
    },
    "shutdownSteps": {
      "type": "array"
    },
    "reportDescriptor": {
      "type": "object"
    },
    "quirks": {
      "type": "array"
    }
  }
}

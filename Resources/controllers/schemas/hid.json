{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "HID Controller Configuration Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "vendorId": {
      "type": "integer"
    },
    "productId": {
      "type": "integer"
    },
    "transport": {
      "type": "string",
      "enum": [
        "usb",
        "bluetooth",
        "hid"
      ]
    },
    "protocolTypeStr": {
      "type": "string",
      "enum": [
        "hid",
        "ps4HID",
        "ps5HID",
        "switchHID"
      ]
    },
    "reportSize": {
      "type": "integer"
    },
    "manufacturer": {
      "type": "string"
    },
    "endpoints": {
      "type": "object",
      "properties": {
        "in": {
          "type": "integer"
        },
        "out": {
          "type": "integer"
        }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "vibration": {
          "type": "boolean"
        },
        "rgb": {
          "type": "boolean"
        },
        "touchpad": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "id",
    "name",
    "vendorId",
    "productId",
    "transport",
    "protocolTypeStr",
    "reportSize"
  ]
}
